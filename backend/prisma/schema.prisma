generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String    @id @default(uuid())
  userId      String
  amount      Float
  type        String
  categoryId  String
  category    String
  description String?
  date        DateTime  @default(now())
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
}

model User {
  id        String   @id @unique
  createdAt DateTime @default(now())
}

model Category {
  id     String @id @default(uuid())
  userId String
  name   String @unique
}
